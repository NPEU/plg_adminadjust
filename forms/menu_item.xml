<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="params">
        <!--
        <fieldset name="params" label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_BADGE_FIELDSET_LABEL" description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_BADGE_FIELDSET_DESC">
            <field
                name="brand_id"
                type="sql"
                default="1"
                label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_BADGE_LABEL"
                description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_BADGE_DESC"
                query="SELECT id, name FROM #__brands"
                key_field="id"
                value_field="name"
            />
        </fieldset>
        -->
        <fieldset name="page-options">
            <field
                name="hero_image"
                type="subform"
                label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_LABEL"
                description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_DESC"
                multiple="true"
                min="1"
                max="5"
            >
                <form>
                    <field
                        name="image"
                        type="media"
                        label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_IMAGE_LABEL"
                        description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_IMAGE_DESC"
                        directory="images"
                    />
                    <field
                        name="alt"
                        type="text"
                        label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_ALT_LABEL"
                        description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_ALT_DESC"
                    />
                    <field
                        name="heading"
                        type="text"
                        label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_HEADING_LABEL"
                        description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_HEADING_DESC"
                    />
                    <field
                        name="text"
                        type="textarea"
                        label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_TEXT_LABEL"
                        description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_TEXT_DESC"
                    />
                    <field
                        name="text_width"
                        type="number"
                        label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_TEXT_WIDTH_LABEL"
                        description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_TEXT_WIDTH_DESC"
                        min="0"
                        max="30"
                    />
                    <field
                        name="text_position"
                        type="radio"
                        label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_TEXT_POSITION_DESC"
                        description=""
                        default="2"
                        class="btn-group"
                    >
                        <option value="left">PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_TEXT_POSITION_OPTION_LEFT</option>
                        <option value="right">PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_TEXT_POSITION_OPTION_RIGHT</option>
                        <option value="bottom">PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_TEXT_POSITION_OPTION_BOTTOM</option>
                    </field>
                    <field
                        name="cta_link"
                        type="text"
                        label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_CTA_LINK_LABEL"
                        description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_CTA_LINK_DESC"
                    />
                    <field
                        name="cta_text"
                        type="text"
                        label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_CTA_TEXT_LABEL"
                        description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HERO_CTA_TEXT_DESC"
                    />
                    
                </form>
            </field>
            <field
                name="show_headline_image"
                type="radio"
                label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HEADLINE_IMAGE_LABEL"
                description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_HEADLINE_IMAGE_DESC"
                default="1"
                class="btn-group btn-group-yesno"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="disable_modules"
                type="radio"
                label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_SIDEBAR_LABEL"
                description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_SIDEBAR_DESC"
                default="never"
                class="btn-group"
            >
                <option value="never">PLG_SYSTEM_ADMINADJUST_MENU_ITEM_SIDEBAR_OPTION_NEVER</option>
                <option value="always">PLG_SYSTEM_ADMINADJUST_MENU_ITEM_SIDEBAR_OPTION_ALWAYS</option>
                <option value="root">PLG_SYSTEM_ADMINADJUST_MENU_ITEM_SIDEBAR_OPTION_ROOT</option>
                <option value="sub">PLG_SYSTEM_ADMINADJUST_MENU_ITEM_SIDEBAR_OPTION_SUB</option>
            </field>
            <field
                name="is_landing"
                type="radio"
                default="auto"
                label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_IS_LANDING_LABEL"
                description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_IS_LANDING_DESC"
                class="btn-group btn-group-yesno
            ">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
                <option value="auto">PLG_SYSTEM_ADMINADJUST_MENU_ITEM_IS_LANDING_OPTION_AUTO</option>
            </field>
            <field
                name="subroute_is_landing"
                type="radio"
                default="1"
                label="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_SUBROUTE_IS_LANDING_LABEL"
                description="PLG_SYSTEM_ADMINADJUST_MENU_ITEM_SUBROUTE_IS_LANDING_DESC"
                class="btn-group btn-group-yesno
            ">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
        </fieldset>
    </fields>
</form>